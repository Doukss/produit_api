generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Categorie {
  id        Int      @id @default(autoincrement())
  libelle   String
  createdAt DateTime @default(now())

  produits Produit[]
}

model Produit {
  id          Int      @id @default(autoincrement())
  nom         String
  description String?
  prix        Float
  stock       Int
  categorieId Int
  createdAt   DateTime @default(now())

  categorie    Categorie     @relation(fields: [categorieId], references: [id], onDelete: Cascade)
  fournisseurs Fournisseur[]
}

model Fournisseur {
  id        Int      @id @default(autoincrement())
  nom       String
  email     String?
  telephone String?
  createdAt DateTime @default(now())

  produits Produit[]
}
